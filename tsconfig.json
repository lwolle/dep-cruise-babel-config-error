{
    "exclude": ["node_modules"],
    "include": ["./"],
    "compilerOptions": {
        "lib": ["dom", "es2016"],
        "allowSyntheticDefaultImports": true,
        "jsx": "preserve",
        "target": "es2015",
        "module": "es2015",
        "moduleResolution": "node",
        "newLine": "LF",
        "baseUrl": ".",
        "resolveJsonModule": true,
        "strict": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "skipLibCheck": true
    }
}
